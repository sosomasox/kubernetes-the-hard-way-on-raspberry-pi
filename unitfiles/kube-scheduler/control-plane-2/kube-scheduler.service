[Unit]
Description=Kubernetes Scheduler
Documentation=https://github.com/kubernetes/kubernetes

[Service]
ExecStart=/usr/local/bin/kube-scheduler \
  --config=/etc/kubernetes/config/kube-scheduler-control-plane-2.yaml \
  --tls-cert-file=/var/lib/kubernetes/kube-scheduler-control-plane-2.pem \
  --tls-private-key-file=/var/lib/kubernetes/kube-scheduler-key-control-plane-2.pem \
  --client-ca-file=/var/lib/kubernetes/kubernetes-ca.pem \
  --kubeconfig=/var/lib/kubernetes/kube-scheduler-control-plane-2.kubeconfig \
  --authentication-kubeconfig=/var/lib/kubernetes/kube-scheduler-control-plane-2.kubeconfig \
  --authorization-kubeconfig=/var/lib/kubernetes/kube-scheduler-control-plane-2.kubeconfig \
  --v=3
Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.target

